<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1976D2"/> <!-- Màu khi nhấn -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#2196F3"/> <!-- Màu bình thường -->
            <corners android:radius="12dp"/>
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
            <stroke android:width="2dp" android:color="#1E88E5"/> <!-- Viền -->
        </shape>
    </item>
</selector>
